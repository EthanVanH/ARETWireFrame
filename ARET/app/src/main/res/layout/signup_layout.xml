<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center_horizontal"
        android:text="SIGN UP"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your first name"
        android:gravity="center_horizontal"
        android:id="@+id/firstname_signup"
        android:imeOptions="actionDone" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstname_signup"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your last name"
        android:gravity="center_horizontal"
        android:id="@+id/lastname_signup"
        android:imeOptions="actionDone" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastname_signup"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your email address"
        android:gravity="center_horizontal"
        android:id="@+id/username_signup"
        android:imeOptions="actionDone" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_signup"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your password"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:id="@+id/password_signup"
        android:imeOptions="actionDone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_signup"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/spinner_container">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select yout district: "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/region_spinner" />
    </LinearLayout>
    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_below="@id/spinner_container"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/signup_button"
        android:background="@color/gold" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/login_switch_button"
        android:background="@color/gold"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/signup_button"
        android:layout_alignStart="@+id/signup_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center_horizontal"
        android:text="*All fields are required"
        android:layout_below="@+id/login_switch_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

</RelativeLayout>